{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "removeComments": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@database/*": [
        "database/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}